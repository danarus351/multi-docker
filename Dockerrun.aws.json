{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions":[
        {
            "name":"client",
            "image":"danarus/multi_client",
            "hostname":"client",
            "essential": false
        },
        {
            "name":"server",
            "image":"danarus/multi_server",
            "hostname":"api",
            "essential": false
        },
        {
            "name":"worker",
            "image":"danarus/multi_worker",
            "hostname":"worker",
            "essential": false
        },
        {
            "name":"nginx",
            "image":"danarus/multi_nginx",
            "essential": true,
            "portMappings":[
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }
    ]
}